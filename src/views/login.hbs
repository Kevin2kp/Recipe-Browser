<nav>
	<div class="nav-wrapper">
		<ul id="nav-mobile" class="right hide-on-med-and-down">
			<li><a href="/">Home</a></li>
		</ul>
	</div>
</nav>

<main>
	<div class="custom-container center form-box-width">
		<row>
			<div class="col s12">
				<h1>Login</h1>
			</div>
		</row>

		<form action="/login" method="post" name="login_form" id="login_form">
			<div class="row">
				<div class="col s12">

					{{!User_Accounts Field}}

					<div class="row">
						<div class="input-field col s12 m8 offset-m2 l6 offset-l3">
							<input type="text" placeholder="" name="username" id="username">
							<label for="username">Username</label>
						</div>
					</div>

					{{!Password Field}}

					<div class="row">
						<div class="input-field col s12 m8 offset-m2 l6 offset-l3">
							<input type="password" placeholder="" name="password" id="password">
							<label for="password">Password</label>
						</div>
					</div>
				</div>
			</div>
		</form>

		<div class="row">
			<button class="btn" type="submit" form="login_form">Sign in</button>
		</div>
	</div>
</main>