<main>
	<div class="custom-container form-box-width center">
		<row>
			<div class="col s12">
				<h1>Register</h1>
			</div>
		</row>

		<form action="/register" method="post" name="registration_form" id="registration_form">
			<div class="row">
				<div class="col s12">

					{{!First and Last Name}}

					<div class="row">
						<div class="input-field col s12 m8 offset-m2 l6 offset-l3">
							<input type="text" placeholder="" name="first_name" id="first_name">
							<label for="first_name">First Name</label>
						</div>
					</div>

					<div class="row">
						<div class="input-field col s12 m8 offset-m2 l6 offset-l3">
							<input type="text" placeholder="" name="last_name" id="last_name">
							<label for="last_name">Last Name</label>
						</div>
					</div>

					{{!Email Address}}

					<div class="row">
						<div class="input-field col s12 m8 offset-m2 l6 offset-l3">
							<input type="email" placeholder="" name="email" id="email">
							<label for="email">Email Address</label>
						</div>
					</div>

					{{!Username Field}}

					<div class="row">
						<div class="input-field col s12 m8 offset-m2 l6 offset-l3">
							<input type="text" placeholder="" name="username" id="username">
							<label for="username">Username</label>
						</div>
					</div>

					{{!Password Field}}

					<div class="row">
						<div class="input-field col s12 m8 offset-m2 l6 offset-l3">
							<input type="password" placeholder="" name="password" id="password">
							<label for="password">Password</label>
						</div>
					</div>
				</div>
			</div>
		</form>

		<div class="row">
			<button class="btn" type="submit" form="registration_form">Sign up</button>
		</div>
	</div>
</main>