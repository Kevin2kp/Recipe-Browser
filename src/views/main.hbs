{{!Hidden Logout Form}}

<form id="logout_form" name="logout" action="/logout" method="post">
	<input type="hidden" name="logout_input" value="logout">
</form>

<script>
	const form = document.getElementById('logout_form');

	function submit_form(){
		form.submit();
	}
</script>